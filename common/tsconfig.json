{
    "compilerOptions": {
        "target": "es2015",
        "module": "ES2015",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*/index", "src/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true,
        "resolveFullExtension": "'.js' | '.mjs' | '.cjs'",
        "fileExtensions": {
            "inputGlob": "{js,jsx,mjs}",
            "outputCheck": ["js", "json", "jsx", "mjs"]
        }
    }
}
