{
    "compilerOptions": {
        "target": "es2015",
        "module": "ES2015",
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*/index", "src/*"]
        },
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true
    },
    "include": ["src/**/*.ts", "src/routes.ts"],
    "exclude": ["node_modules"]
}
